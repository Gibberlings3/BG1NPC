@395  = ~Grazie! Lo farò!~
@396  = ~Err... addio!~
@1001 = ~Eh? Non importa! Devo andare! Ho molto da fare!~
@1002 = ~Eh? Non importa. Ho un conto in sospeso con un mondo insensibile.~
@1003 = ~Tenete giù la testa e le armi a portata di mano.~
@1004 = ~Ah. Ma siamo tutti un po' più grandi.~
@1005 = ~Non vogliamo il tuo oro, hai capito?~
